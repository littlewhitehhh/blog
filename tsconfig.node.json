{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@v/*": ["src/views/*"],
      "@c/*": ["src/components/*"],
      "@u/*": ["src/utils/*"]
    }
  },
  "include": ["vite.config.ts", "src/*/**.ts", "src/**/*.tsx", "src/**/*.vue"]
}
